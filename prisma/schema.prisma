// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Article {
  article_id     String    @default(dbgenerated("gen_random_uuid()")) @id
  slug           String    @unique
  title          String
  teaser         String
  content        String?
  created_at     DateTime  @default(now())
  published_at   DateTime?
  updated_at     DateTime?
}

model Session {
  session_id     String    @default(dbgenerated("gen_random_uuid()")) @id
  expires        DateTime
}

model Page {
  page_id        String    @id
  data           Json
  sections       Json @default("[]")
}

model Dpage {
  dpage_id       String    @id
  path           String    @unique
  theme          String    
  data           Json      @default("{}")
  head           Json      @default("{}")
}

model Counter {
  counter_id     String    @id
  count          Int
}

model Image {
  image_id       String    @default(dbgenerated("gen_random_uuid()")) @id
  src            String    @unique
  layout         String
  width          Int
  height         Int
  type           ImageType
  alt            String
  priority       Boolean
}

enum ImageType {
  png
  jpg
  jpeg
  webp
}

enum ImageLayout {
  constrained
  fullWidth
  fixed
}


model Chat {
  id            Int                @id @default(autoincrement()) 
  name          String
  messages      ChatMessage[]
}

model ChatMessage {
  id                   Int         @id @default(autoincrement()) 
  chat                 Chat        @relation(fields: [chat_id], references: [id])
  chat_id              Int
  host                 Boolean
  avatar               Int
  name                 String
  timestamp            String
  message              String
}

